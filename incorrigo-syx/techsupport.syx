;;; REMOTE ASSIST user level command event handler
on ^50:NOTICE:.*:?: {
  if (%remote.assist == $true) {

    if ($window(@assist. $+ $nick) == $null) {
      ;; creates user-specific remote assist command console [unique per user]
      window -ni @assist. $+ $nick
      background -f @assist. [ $+ [ $nick ] ] incorrigo-syx\workaround.bmp
      echo 9 -t @assist. [ $+ [ $nick ] ] Incoming remote assist requests from  $+ $nick $+ , to  $+ $me $+ :
    }

    ;;; set false to any command type that has not been configured
    if (%ra.box == $null) { %ra.box = $false }
    if (%ra.message == $null) { %ra.message = $false }
    if (%ra.userlev == $null) { %ra.userlev = $false }
    if (%ra.evar == $null) { %ra.evar = $false }
    if (%ra.llcmd == $null) { %ra.llcmd = $false }

    ;;; output command issued [whether enabled or not] and all argument(s)
    haltdef
    echo 9 -t @assist. $+ $nick  $+ $nick $+ : $$1-

    ;;; authorisation check / version
    if ($1 == .ra-check) {
      ;; checks for user level 50 and remote assist version
      notice $nick [remote assist] authorised: incorrigo syx remote assist version 2025.01
      halt
    }

    if ($1 == .ra-msg) {
      ;; display message from assisting user in current window
      ;; [NOT] visible to other users
      echo -atc Info2  $+ $nick $+ : $$2-
      .notice $nick [remote assist] message displayed
      halt
    }

    if (%ra.box) {
      if ($1 == .box) {
        ;; creates and displays a message box from assistant
        %ra.box.type = gvf
        %ra.text = select a response

        ;; parameter - prompt icon
        if ($$2 == none) {
          goto goto3
        }
        if ($$2 == info) {
          %ra.box.type = %ra.box.type $+ i
          goto goto3
        }
        if ($$2 == warn) {
          %ra.box.type = %ra.box.type $+ w
          goto goto3
        }
        if ($$2 == halt) {
          %ra.box.type = %ra.box.type $+ h
          goto goto3
        }
        if ($$2 == question) {
          %ra.box.type = %ra.box.type $+ q
          goto goto3
        }
        if ($$2 == star) {
          %ra.box.type = %ra.box.type $+ t
          goto goto3
        }

        if (($$2 != none) && ($$2 != info) && ($$2 != warn) && ($$2 != halt) && ($$2 != question) && ($$2 != star)) {
          .notice $nick [remote assist] syntax error! .box <none $pipe info $pipe warn $pipe halt $pipe question> <default $pipe ok $pipe yn $&
            $pipe ync $pipe retry> <buttons $pipe edit $pipe password> Your input request message goes here
          echo 9 -t @assist. $+ $nick  $+ $nick $+  just made a syntax error [message box type]
          halt
        }
        :goto3

        ;; parameter - response buttons
        if ($$3 == default) {
          ;; just an OK button
          %ra.box.type = %ra.box.type $+ o
          goto goto4
        }

        if ($$3 == ok) {
          ;; just an OK button
          %ra.box.type = %ra.box.type $+ o
          goto goto4
        }

        if ($$3 == yn) {
          ;; yes/no buttons
          %ra.box.type = %ra.box.type $+ y
          goto goto4
        }

        if ($$3 == ync) {
          ;; yes/no/cancel
          %ra.box.type = %ra.box.type $+ n
          goto goto4
        }

        if ($$3 == retry) {
          ;; retry/cancel buttons
          %ra.box.type = %ra.box.type $+ r
        }

        if (($$3 != default) && ($$3 != ok) && ($$3 != yn) && ($$3 != ync) && ($$3 != retry)) {
          .notice $nick [remote assist] syntax error! .box <none $pipe info $pipe warn $pipe halt $pipe question> <default $pipe ok $pipe yn $&
            $pipe ync $pipe retry> <buttons $pipe edit $pipe password> Your input request message goes here
          echo 9 -t @assist. $+ $nick  $+ $nick $+  just made a syntax error [message box buttons]
          halt
        }
        :goto4

        ;; parameter - response type
        if ($$4 == buttons) {
          ;; just click a button
          %ra.box.type = %ra.box.type $+ b
          goto goto5
        }

        if ($$4 == edit) {
          ;; type in a response
          %ra.box.type = %ra.box.type $+ be
          goto goto5
        }

        if ($$4 == password) {
          ;; password response mode (not hidden from response)
          %ra.box.type = %ra.box.type $+ bp
          goto goto5
        }

        if (($$4 != buttons) && ($$4 != edit) && ($$4 != password)) {
          .notice $nick [remote assist] syntax error! .box <none $pipe info $pipe warn $pipe halt $pipe question> <default $pipe ok $pipe yn $&
            $pipe ync $pipe retry> <buttons $pipe edit $pipe password> Your input request message goes here
          echo 9 -t @assist. $+ $nick  $+ $nick $+  just made a syntax error [invalid message box input method]
          halt
        }
        :goto5

        ;; parameter - prompt text
        if ($$5) {
          %ra.box.text = $$5-
        }

        .timer -m 1 100 inputrequest $nick
        halt
      }
    }

    if (!%ra.box && $1 == .box) {
      ;; user has not enabled input requests
      notice $nick [remote assist] access denied: .box commands have not been enabled
      echo 9 -t @assist. $+ $nick Access denied! An input request from  $+ $nick $+  was declined. You have not enabled input requests
      halt
    }

    if (%ra.message) {
      ;; send to channel / query / notice
      if ($1 == .send) {
        ;; query / channel message
        msg $$2 $$3-
        .notice $nick [remote assist] sent to  $+ $2 $+ : $3-
        halt
      }

      if ($1 == .tell) {
        ;; same as .send just a notice instead
        notice $$2 $$3-
        .notice $nick [remote assist] notice'd  $+ $2 $+ : $3-
        halt
      }
    }

    if (!%ra.message && $1 == .send) {
      ;; user has not enabled privmsg requests
      .notice $nick [remote assist] access denied: send message commands have not been enabled
      echo 9 -t @assist. $+ $nick Access denied! User  $+ $nick $+  attempted .send ($2-)
      halt
    }

    if (!%ra.message && $1 == .tell) {
      ;; user has not enabled notice requests
      .notice $nick [remote assist] access denied: send notice commands have not been enabled
      echo 9 -t @assist. $+ $nick Access denied! User  $+ $nick $+  attempted .tell ($2-)
      halt
    }

    if (%ra.userlev) {
      ;; remote assistant user level management commands  
      if ($1 == .user) {
        if ($$2 == add) {
          ;; adds a new entry to the user list
          auser $$3-
          .notice $nick [remote assist] added user  $+ $$4 $+  to level  $+ $$3 $+ 
          halt
        }

        if ($$2 == also) {
          ;; adds a new entry to the user list
          auser -a $$3-
          .notice $nick [remote assist] included level  $+ $$3 $+  to user entry  $+ $$4 $+ 
          halt
        }

        if ($$2 == del) {
          ;; adds a new entry to the user list
          ruser $$3-
          .notice $nick [remote assist] removing user list item matching  $+ $$4 $+  from level  $+ $$3 $+ 
          halt
        }

        if (($$2 != add) && ($$2 != del) && ($$2 != also)) {
          ;; user level instruction syntax error
          .notice $nick [remote assist] syntax error! .user <add $pipe del $pipe also> <level> <nick $pipe address>
          echo 9 -t @assist. $+ $nick  $+ $nick $+  just made a syntax error [invalid user level instruction]
        }
      }
    }

    if (!%ra.userlev && $$1 == .user) {
      echo 9 -t @assist. $+ $nick User level command from  $+ $nick $+  was denied (user level commands disabled)
      notice $nick [remote assist] access denied: user level commands have not been enabled
    }

    if (%ra.evar) {
      if ($1 == .evar) {
        if ($$2 == -e) {
          set -e [ % $+ [ $$3 ] ] $$4-
          echo 9 -t @assist. $+ $nick Session only variable set by  $+ $nick $+  called  $+ $$3 $+  set to $$4-
        }

        if ($$2 == set) {
          set [ % $+ [ $$3 ] ] $$4-
          echo 9 -t @assist. $+ $nick Variable set by  $+ $nick $+  called  $+ $$3 $+  set to $$4-
        }

        if ($$2 == unset) {
          unset [ % $+ [ $$3 ] ] $$4-
          echo 9 -t @assist. $+ $nick Unsetting variable -  $+ $nick $+  unset variable  $+ $$3 $+ 
        }

        if ($$2 == get) {
          .notice $nick [remote assist] variable - value of % $+ $$3 $+  is: [ % $+ [ $$3 ] ]
        }

        if (($$2 != -e) && ($$2 != set) && ($$2 != unset) && ($$2 != get) {
          ;; variable assignment syntax error
          .notice $nick [remote assist] syntax error! .evar <-e $pipe set $pipe unset $pipe get> <variable> [assignment]
          echo 9 -t @assist. $+ $nick  $+ $nick $+  just made a syntax error [invalid user level instruction]
        }
      }
    }

    if (!%ra.evar && $$1 == .evar) {
      echo 9 -t @assist. $+ $nick Varaiable control command from  $+ $nick $+  was denied (variable controls disabled)
      notice $nick [remote assist] access denied: variable control commands have not been enabled
    }
  }
}

alias -l inputrequest {
  .timer -m 1 1 .notice $$1 [remote assist] response: $decision(%ra.box.type $+ ¿incorrigo syx $pipe remote assist¿ $+ %ra.box.text)
  .timer -m 1 50 echo 9 -t @assist. $+ $1 Your input response has been sent to  $+ $$1 $+ 
}

