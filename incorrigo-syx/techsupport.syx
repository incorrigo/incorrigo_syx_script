alias ram {
  if ($dialog(ra) == $null) {
    dialog -muo ra ra
  }
}

on *:DIALOG:ra:init:0: {
  if (%remote.assist == $true) {
    did -ec ra 2
    did -ue ra 3-7
    did -bv ra 8-12

    if (%ra.box) {
      did -c ra 3
      did -e ra 8
    }

    if (%ra.userlev) {
      did -c ra 4
      did -e ra 9
    }

    if (%ra.evar) {
      did -c ra 5
      did -e ra 10
    }

    if (%ra.message) {
      did -c ra 6
      did -e ra 11
    }

    if (%ra.llcmd) {
      did -c ra 7
      did -e ra 12
    }
  }
}

on *:DIALOG:ra:sclick:2: {
  if ($did(ra, 2).state == 1) {
    %ra.evar = $false
    %ra.box = $false
    %ra.userlev = $false
    %ra.message = $false
    %ra.llcmd = $false
    %remote.assist = $true
    did -ue ra 3-7
    did -bv ra 8-12
  }

  if ($did(ra, 2).state == 0) {
    %ra.evar = $false
    %ra.box = $false
    %ra.userlev = $false
    %ra.message = $false
    %ra.llcmd = $false
    %remote.assist = $false
    did -ub ra 3-7
    did -bh ra 8-12
  }
}

on *:DIALOG:ra:sclick:3: {
  if ($did(ra, 3).state == 1) {
    %ra.box = $true
    did -e ra 8
  }

  if ($did(ra, 3).state == 0) {
    %ra.box = $false
    did -b ra 8
